<div class="modal-dialog draggable modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title"> Product Data List </h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>

        <div class="modal-body">
            <table class="table table-bordered  table-sm table-hover full-width" id="modalData">
                <thead>
                    <tr>
                        <th style="width:50px;">
                            <input type="checkbox" id="selectAllProducts" />
                        </th>
                        <th hidden> Group Name</th>
                        <th hidden>ProductId</th>
                        <th hidden>Product Code</th>
                        <th>Product Name</th>
                        <th>Bangla Name</th>
                        <th hidden>HS Code No. </th>
                        <th hidden>UOMId</th>
                        <th>UOM</th>
                        <th>Ctn Size</th>
                        <th hidden> SD Rate</th>
                        <th hidden>VAT Rate</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="modalDataList" class="cursorHand">
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" id="btnAddProducts" class="btn btn-primary">Add Selected</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>