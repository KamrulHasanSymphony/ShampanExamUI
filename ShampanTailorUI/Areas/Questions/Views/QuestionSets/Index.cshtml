@model ShampanExam.Models.QuestionVM.QuestionSetHeaderVM
@{
    ViewBag.Title = "Question Set Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Question Set List </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Action Buttons -->
<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Add New" data-url="/Questions/QuestionSets/Create" onclick="GoTo(this)" class="button NewButton addNewButton">
                New
            </button>
            <button type="button" title="Post data" id="btnPost" class="button sslPost">
                Post
            </button>
        </div>
    </div>
</div>

<!-- Grid Section -->
<div class="container-fluid">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">Question Set Info</h3>
        </div>
        <div class="card-body">
            <div id="GridDataList"></div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    @*<script src="~/Areas/Common/js/Services/CommonComboHelper.js"></script>*@
    <script src="~/Areas/Questions/js/Controllers/QuestionSetsController.js"></script>

    <script>
        $(document).ready(function () {
            QuestionSetsController.init();

            var message = '@(TempData["Message"])';
            if (message) {
                alert(message);
                window.close();
            }
        });
    </script>
}
